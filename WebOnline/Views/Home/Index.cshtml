
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>
<style>
    .product {
        margin-top: 50px;
        display: flex;
        flex-wrap: wrap;
        align-content:center;
    }

    .the {
        width: 450px;
        border-radius: 5px;
        padding: 10px;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
        transition: 0.3s;
        cursor: pointer;
    }

        .the:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0.2);
            cursor: pointer;
        }

    #margin-card {
        text-align: center;
        margin-top: 20px;
    }
</style>
<div >
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <div class="carousel-inner">
            <div class="item active">
                <img src="~/assets/images/1.jpg" alt="Los Angeles" style="width: 100%; ">
            </div>

            <div class="item">
                <img src="~/assets/images/2.jpg" alt="Chicago" style="width:100%;">
            </div>

            <div class="item">
                <img src="~/assets/images/3.jpg" alt="New york" style="width:100%;">
            </div>
        </div>

        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div>
        <nav style="text-align:center;color: var(--back-color)">
            <h2>Oto Việt - Đại lý Ôtô Việt Nam</h2>
        </nav>
    </div>
</div>
<div class="container">
    <div class="product row">
        @foreach (var product in ViewBag.products)
        {
            //col - md - 4 col - lg - 3
            <div class=" col-sm-5" id="margin-card">
                <div class="the">
                    <p>@product.ProductName </p>
                    @if (product.Image != null)
                    {
                        var base64 = Convert.ToBase64String(product.Image);
                        var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                       <a href="@Url.Action("Details","Products",new { id = product.ProductId})"> <img src="@imgSrc" style="width:400px; height: 200px; margin: 10px" /></a>
                    }
                    else
                    {
                        <h5>Not Image</h5>
                    }
                    <p>@product.UnitPrice</p>

                </div>
            </div>
        }
    </div>
</div>

