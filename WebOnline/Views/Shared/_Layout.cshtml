    <meta content="text/html; charset=iso-8859-2" http-equiv="Content-Type">

    <link href="~/assets/css/main.css" rel="stylesheet" />
    <link href="~/assets/css/base.css" rel="stylesheet" />

</head>
<body>
    <div class="app">
        <header class="header">
            <div class="grid">
                <nav class="header_navbar">
                    <ul class="header_navbar-list">
                        <li class="header_navbar-item">
                            <div id="mySidebar" class="sidebar">
                                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">×</a>
                                <a href="#">Các dòng xe</a>
                                <a href="#">Dịch vụ, Phụ tùng & Phụ kiện</a>
                                <a href="#">Thế giới xe</a>
                                <a href="#">Doanh nghiệp</a>
                            </div>

                            <div id="main">
                                <button class="openbtn" onclick="openNav()">☰ Menu</button>
                            </div>

                            <script>
                                function openNav() {
                                    document.getElementById("mySidebar").style.width = "250px";
                                    document.getElementById("main").style.marginLeft = "250px";
                                }

                                function closeNav() {
                                    document.getElementById("mySidebar").style.width = "0";
                                    document.getElementById("main").style.marginLeft = "0";
                                }
                            </script>
                        </li>
                    </ul>
                    <div class="header_logo">
                        <a href="/Home/Index">
                            <svg class="logo_lexus" version="1.1" xmlns="http://www.w3.org/2000/svg" width="122.3" height="22" viewBox="0 0 122.3 22">
                                <path d="M22.2,1l-0.7,1c4.5,1.9,6.3,5.2,6.3,8.8c0,1.8-0.5,3.4-1.4,3.4H14.6c-1.6,0-2.1-0.6-1.4-2 c1.3-2.5,5.2-7.4,7.5-10.4c0.3-0.4,0.6-1.1-0.6-1.4C18.5,0.1,16.8,0,15.1,0C6.2,0,0,4.8,0,11c0,5.7,5.4,11,15,11 c4.3,0,9.5-1.2,12.5-4.6H25c-2.9,2.6-6.7,3.2-9.9,3.2c-7.8,0-12.8-4.1-12.8-9.7c0-5.2,5.6-9.8,12.7-9.8c0.8,0,1.1,0.2,0.2,1.3 c-2.4,3-4.5,6.1-6.5,9.3c-1.6,2.8,0,5.1,3.7,5.1h14.8c0.9,0,1.4-0.5,2-1.5c0.7-1.3,1.1-2.8,1.1-4.4C30.1,6.8,27,2.9,22.2,1z M118.5,10.2h-10c0.3-1.3,1.3-2.2,3.2-2.2h9.6V5.9h-10.2c-5.8,0-7.2,4.1-7.2,6.5h12.4 c0.6-0.1,1.2,0.4,1.3,1c0.1,0.6-0.4,1.2-1,1.3c-0.1,0-0.1,0-0.2,0l-13.7,0V5.9h-4.1v8.8h-6.9c-1.8,0-2.6-0.9-2.6-2.2 c0-1.6,0-6.5,0-6.5h-6.6l-5.9,3.7l-5.1-3.7H56.8c-4.2,0-7.3,2.5-7.6,5.6h2.8c-1.1,0.8-2,1.9-2.4,3.2h-8.7c-1.2,0.2-2.2-0.7-2.4-1.8 c0-0.2,0-0.4,0-0.6V5.9h-4.1v5.4c0,3.4,1.9,5.6,6.1,5.6h28.9l5.9-3.7l5.1,3.7h6.1l-8-5.8l6.5-4.1v6.2c0,1.9,2.5,3.7,4.7,3.7h28.9 C123.6,16.8,123.6,10.2,118.5,10.2z M67.2,14.4H53.5c0-1.3,1.1-2.3,2.4-2.3c0.1,0,0.1,0,0.2,0h8.5V10H53.3c0.4-1.4,1.7-2.2,3.1-2.1h9V6.7 l6.5,4.7L67.2,14.4z"
                                      fill="#fff"></path>
                            </svg>
                        </a>
                    </div>
                    <div class="header_navbar-list">
                        @if (Session["Username"] == null)
                        {   <ul class="header_navbar-list">
                            <li class="header_navbar-item"><a class="header_navbar-item text-decoration-none" href="/Home/Register"> Đăng ký </a></li>
                            <li class="header_navbar-item" data-toggle="modal" data-target="#basicExampleModal">Đăng nhập</li></ul>
                        }
                        else
                        {
                            if (Session["FullName"] != null)
                            {   <style>.user{padding: 0} .header_navbar-item,.w3-button{margin: 0; padding: 0;} .w3-dropdown-hover{background-image: var(--background-header);} </style>
                                <div class="w3-dropdown-hover">                                     
                                    <ul class="user">
                                        <li class="header_navbar-item w3-button ">Name: @Session["FullName"].ToString()</li>
                                    </ul>
                                    <div class="w3-dropdown-content w3-bar-block w3-card-4">
                                        @if(Session["idUser"].ToString() == "1")
                                        { <a href="/Products/Index" class="text-decoration-none">Quản lý Sản Phẩm</a> }
                                        <a href="@Url.Action("Logout", "Home")" class="btn btn-warning">Logout</a>
                                    </div></div>
                            }
                        }
                    </div>

                </nav>
                <div class="header-with-search">                    
                    <div class="header_search">

                    </div>
                </div>
            </div>

        </header>
        <div>
            @RenderBody()

        </div>
        <footer class="footer">
            <div class="about">

            </div>
        </footer>
    </div>
    
     <div class="modal fade" id="basicExampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
         <div class="modal-dialog" role="document">
             <div class="modal-content">
                 <div class="modal-header">
                     <h5 class="modal-title" id="exampleModalLabel">Đăng nhập</h5>
                     <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                         <span aria-hidden="true">&times;</span>
                     </button>
                 </div>
                 <div class="modal-body">
                     @Html.Partial("~/Views/Home/Login.cshtml")
                 </div>
                 <div class="modal-footer">
                     <button type="button" class="btn btn-secondary" data-dismiss="modal">Trở lại</button>
                     @*<button type="submit" name="submit" class="btn btn-primary">Đăng nhập</button>*@
                 </div>
             </div>
         </div>
     </div>
</body>
</html>
